<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout_root"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:paddingLeft="8dp"
    android:gravity="center_vertical"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_prd"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/prd_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_prd"
        android:layout_toLeftOf="@+id/iv_bih"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="पंचायती राज विभाग"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panchayati Raj Department, Govt. of Bihar"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="12dp"/>
    </LinearLayout>




    <ImageView
        android:id="@+id/iv_bih"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/bihgov"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rlMaintHeader"
        android:layout_width="match_parent"
        android:background="@drawable/gradientheadergreenyellow"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/headerimg"/>

    </LinearLayout>

   

</RelativeLayout>