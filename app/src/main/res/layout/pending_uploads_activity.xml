<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1b5e20"
        android:gravity="center" >

        <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="#74D600"
            android:text="UPLOAD OF ENTRIES"
            android:textColor="#ffffff" 
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical" 
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:background="#1b5e20"
            android:gravity="center" >

            <Button
                android:id="@+id/btnFarmers"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:background="#1b5e20"
                android:clickable="true"
                android:text="@string/PaddyFromFarmers"
                android:textColor="#ffffff"
                android:padding="5dp" />
        </LinearLayout>

        <!-- <LinearLayout
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#1b5e20"
            android:gravity="center" 
            android:visibility="gone">

            <Button
                android:id="@+id/btnSFC_Paddy"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#1b5e20"
                android:clickable="true"
                android:text="@string/PaddyToSFC"
                android:textColor="#ffffff"
                 />
        </LinearLayout> -->

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#1b5e20"
            android:gravity="center" >

            <Button
                android:id="@+id/btnRM_Paddy"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#1b5e20"
                android:clickable="true"
                android:text="@string/PaddyToMills"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#1b5e20"
            android:gravity="center" >

            <Button
                android:id="@+id/btnRM_CMR"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#1b5e20"
                android:clickable="true"
                android:text="@string/CMRFromMills"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#1b5e20"
            android:gravity="center" >

            <Button
                android:id="@+id/btnSFC_CMR"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#1b5e20"
                android:clickable="true"
                android:text="@string/CMRToSFC"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="#290200"
            android:gravity="center" >

            <Button
                android:id="@+id/btnUploadAll"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#290200"
                android:clickable="true"
                android:text="Upload All Entries"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>