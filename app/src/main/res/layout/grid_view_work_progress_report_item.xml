<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/relallinfo"-->
        <!--android:orientation="vertical">-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/lnSearch"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/txtWardNumber"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_weight=".2"
                android:padding="5dp"
                android:text="वार्ड  "/>
            <TextView
                android:id="@+id/txtyojana"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight=".4"
                android:text="योजना का नाम "/>
            <TextView
                android:id="@+id/txtTotalDistribution"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight=".1"
                android:text="कुल आवंटन "/>
            <TextView
                android:id="@+id/txtTotalExpenditure"
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight=".1"
                android:text="कुल खर्च  "/>
            <TextView
                android:id="@+id/txtPhysicalStatus"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:padding="5dp"
                android:layout_weight=".2"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="भौतिक स्तिथि"/>
        </LinearLayout>

</RelativeLayout>