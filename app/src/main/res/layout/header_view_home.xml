<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout_root"
    android:layout_width="match_parent"
    android:background="#a8da9f"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/rlMaintHeader"
        android:layout_width="match_parent"
        android:background="@drawable/gradientheadergreenyellow"
        android:layout_height="55sp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            android:padding="2dp"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/txtHeaderTop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="मुख्यमंत्री निश्चय योजना"/>

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:padding="5dp"
            android:onClick="OnClick_goToLoginScreen"
            android:src="@drawable/logoutns"/>
    </LinearLayout>

   

</RelativeLayout>